{% include '_partials/_head.twig' %}

    <body class="ltr bg-gray-900">
        {% include '_partials/_nav.twig' %}
        {% block content %}
        {% include '_partials/_pageHeader.twig' %}

    
        <section class="mt-20 max-w-6xl mx-auto prose md:prose-lg prose-p:text-white prose-headings:text-lime-500 px-4">
            <h1>
                Order Now
              </h1>
              <p>Order now with <a href="https://www.doordash.com/store/west-street-mini-market---1601-west-st-utica-31747353/?srsltid=AfmBOoq-pgChHNwOwQ5ka1wAyMV7EAzCNDUenmWwzQ91Af2FIhbJTiM1" class="text-orange-400">DoorDash!</a></p>
        </section>
            <section class="max-w-6xl grid md:grid-cols-2 lg:grid-cols-3 gap-10 mx-auto px-4 mt-10 min-h-screen">

                {% set myEntryQuery = craft.entries().section('menu').limit(10) %}
                {% set entries = myEntryQuery.all() %}

                {% for entry in entries %}
                <div>
                   
                   
                        <h2 class=" text-lime-500 font-medium text-3xl md:text-4xl border-b border-lime-500  mb-4 md:mb-6">{{ entry.title }}</h2>
                   
                  

                        {% for block in entry.item.all() %}

                        {% if block.text | length %}
                            <div class="text-white prose prose-h4:text-white prose-h2:text-lime-400 prose-h2:font-medium prose-h2:mt-4 prose-h2:mb-2">
                                <h2>{{ block.menuSubtitle }}</h2>
                                <div>
                               
                        {{ block.text }}
                                </div>
                   
                            </div>
                        {% endif %}
                        <div class="flex flex-wrap justify-between text-white not-prose leading-loose">
                            
                            <p>{{ block.menuItem }}</p>
                            <p>{{ block.priceSmall | money }} {% if block.priceLarge | length %}/  {{ block.priceLarge | money }}{% endif %}</p>
                      
                        </div>
                 {% endfor %}
                </div>
                {% endfor %}
            </section>
        </div>
        {% endblock %}
        {% include '_partials/_footer.twig' %}
    </body>
</html>
